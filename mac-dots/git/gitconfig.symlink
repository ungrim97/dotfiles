[user]
    name = Mike Eve
    email = ungrim97@gmail.com
[core]
    editor = vim
	pager = less -x1,5
[pull]
    ff = true
[merge]
    ff = false
    tool = vimdiff
[alias]
    gl  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate
    sur = submodule update --recursive
    co	= checkout
    st	= status
    cp  = cherry-pick
[push]
    default = upstream
[gitflow "feature.finish"]
	no-ff = true
